<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style field="td">

    </ui:style>

    <g:HTMLPanel>
        <table>
            <tr>
                <td>
                    Имя:
                </td>
                <td>
                    <g:TextBox ui:field="name" focus="true"/>
                </td>
            </tr>
            <tr>
                <td>
                    Телефон:
                </td>
                <td>
                    <g:TextBox ui:field="number" focus="true"/>
                </td>
            </tr>
            <tr>
                <td>
                    Комментарий:
                </td>
                <td>
                    <g:TextArea ui:field="comment" focus="true"/>
                </td>
            </tr>
        </table>
        <div align="right">
            <g:Button ui:field="applyButton" text="Изменить"/>
            <g:Button ui:field="cancelButton" text="Отмена"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>